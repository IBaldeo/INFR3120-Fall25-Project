<% include partials/main_nav.ejs %>

<h1>Edit Incident</h1>

<form action="/incidents/<%= incident._id %>/update" method="POST">
  
  <label>Title:</label>
  <input type="text" name="title" value="<%= incident.title %>" required>

  <label>Description:</label>
  <textarea name="description" required><%= incident.description %></textarea>

  <label>Date:</label>
  <input type="date" name="date" value="<%= incident.date.toISOString().slice(0,10) %>" required>

  <label>User:</label>
  <input type="text" name="user" value="<%= incident.user %>" required>

  <button type="submit">Save Changes</button>
</form>